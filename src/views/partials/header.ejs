      <!-- Navigation -->
      <nav class="nav">
        <ul>
          <% ['Home','Politics','Opinion','Business','Lifestyle','Sports','Multimedia'].forEach(function(item) { %>
            <li><a href="/<%= item.toLowerCase() %>"><%= item %></a></li>
          <% }); %>
        </ul>
      </nav>

      <!-- Actions -->
